<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 为这个mapper指定一个唯一的namespace，namespace的值习惯上设置成包名+sql映射文件名，这样就能够保证namespace的值是唯一的 -->
<mapper namespace="com.zgc.saap.dao.SysUserRoleDao">
    <!-- 添加数据 -->
    <insert id="add" parameterType="com.zgc.saap.model.SysUserRole">
        insert into sys_user_role(userId,roleId) value(#{userId},#{roleId})
    </insert>
    <!-- 删除数据 -->
    <delete id="deleteById" parameterType="int">
        delete from sys_user_role where id = #{id}
    </delete>
    <!-- 修改数据 -->
    <update id="update" parameterType="com.zgc.saap.model.SysUserRole">
        update sys_user_role set userId=#{userId},roleId=#{roleId} where id=#{id}
    </update>
    <!--根据id查询得到一个对象-->
    <select id="findById" parameterType="int"
            resultType="com.zgc.saap.model.SysUserRole">
        select * from sys_user_role where id=#{id}
    </select>
    <!-- 查询用户下所有角色 -->
    <select id="getByUserId" parameterType="int" resultMap="list1">
      select * from sys_user_role where userId = #{userId};
    </select>

    <resultMap id="list1" type="com.zgc.saap.model.SysUserRole">
        <id column="id" property="id" />
        <result column="userId" property="userId" />
        <result column="roleId" property="roleId" />
    </resultMap>
</mapper>