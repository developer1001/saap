				</Delete>
			</DefaultRolloverStrategy>
			<ThresholdFilter level="fatal" onMatch="ACCEPT"
				onMismatch="DENY" />
		</RollingRandomAccessFile> -->
		<!-- <RollingRandomAccessFile name="druidSqlLog"
			immediateFlush="true" fileName="${LOG_HOME}/druidSql.log"
			filePattern="${LOG_HOME}/druidSql-%d{yyyy-MM-dd}.log.gz">
			<PatternLayout>
				<pattern>[%d{yyyy-MM-dd HH:mm:ss SSS}] [%-5p] %c - %m%n</pattern>
			</PatternLayout>
			<Policies>
				<TimeBasedTriggeringPolicy interval="1"
					modulate="true" />
			</Policies>
			<DefaultRolloverStrategy>
				<Delete basePath="${LOG_HOM}" maxDepth="1">
					<IfFileName glob="druidSql*.gz" />
					<IfLastModified age="3d" />
				</Delete>
			</DefaultRolloverStrategy>
		</RollingRandomAccessFile> -->
	</Appenders>
	<Loggers>
		<!-- 根logger的设置 -->
		<root level="info">
			<appender-ref ref="Console" />
			<appender-ref ref="infoLog" />
			<appender-ref ref="errorLog" />
			<!-- <appender-ref ref="fatalLog" /> -->
		</root>
		<!-- 开启mybatis的sql日志,级别为debug或trace-->
		<Logger name="com.zgc.mtl.dao" level="debug" additivity="true">
			<!-- 放开后会导致控制台打印重复sql -->
        	<!-- <appender-ref ref="Console" /> -->
		</Logger>
        <Logger name="com.zgc.mtl.mybatisGenerator.dao" level="debug" additivity="true">
		</Logger>
